# Core
APP_ENV=local
EXCHANGE=bitget
USE_TESTNET=true

# Enable/disable each trader
PAPER_STATUS=on   # on | off
LIVE_STATUS=off   # on | off

# PAPER CONFIG
PAPER_STRATEGY_TAG=S1
PAPER_ENTRY_TIME_UTC=04:00
PAPER_TRADE_WEEKENDS=true
PAPER_NUM_LEGS=10
PAPER_MARGIN_PER_LEG_USDT=100
PAPER_LEVERAGE=3
PAPER_MAX_PUMP_PCT=0.15
PAPER_GLOBAL_KILL_DD_PCT=0.30
PAPER_POLL_INTERVAL_SEC=30

# LIVE CONFIG
LIVE_STRATEGY_TAG=S1
LIVE_ENTRY_TIME_UTC=04:00
LIVE_TRADE_WEEKENDS=true
LIVE_NUM_LEGS=10
LIVE_MARGIN_PER_LEG_USDT=100
LIVE_LEVERAGE=3
LIVE_MAX_PUMP_PCT=0.15
LIVE_GLOBAL_KILL_DD_PCT=0.30
LIVE_POLL_INTERVAL_SEC=30

# Legacy Scheduling (fallback)
ENTRY_TIME_UTC=04:00
TRADE_WEEKENDS=true
HOLD_HOURS=24

# Legacy Strategy (fallback)
NUM_LEGS=10
MARGIN_PER_LEG_USDT=100
LEVERAGE=3
MAX_PUMP_PCT=0.15
GLOBAL_KILL_DD_PCT=0.30
POLL_INTERVAL_SEC=30
STRATEGY_TAG=S1

# Bitget API (subaccount)
BITGET_API_KEY=
BITGET_API_SECRET=
BITGET_API_PASSPHRASE=
BITGET_BASE_URL=https://api.bitget.com

# Supabase / Postgres
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
DATABASE_URL=

# UI/API
API_PORT=8001
WORKER_HEARTBEAT_SEC=60
